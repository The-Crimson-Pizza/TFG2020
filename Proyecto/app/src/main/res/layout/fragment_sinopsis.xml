<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".ui.SinopsisFragment"
    android:padding="20dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Genres"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_marginBottom="20dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Genres"
        android:layout_marginBottom="20dp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Networks"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_marginBottom="20dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/network_one"
            android:src="@drawable/netflix"
            android:layout_marginEnd="15dp"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/network_two"
            android:src="@drawable/amazon"
            android:layout_marginEnd="15dp"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/network_three"
            android:src="@drawable/netflix"
            android:layout_marginEnd="15dp"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/network_four"
            android:src="@drawable/amazon"
            android:layout_marginEnd="15dp"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/network_five"
            android:src="@drawable/netflix"
            android:layout_marginEnd="15dp"/>

    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sinopsis"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_marginBottom="20dp"/>
    <com.borjabravo.readmoretextview.ReadMoreTextView
        android:id="@+id/sinopsis_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/large_text"
        app:colorClickableText="@color/colorAccent"
        app:trimExpandedText="Read less"
        app:trimCollapsedText="Read more"
        app:trimMode="trimModeLine"
        app:trimLines="10"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Trailer"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_marginBottom="20dp"/>
    <VideoView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/video_view"/>

</LinearLayout>