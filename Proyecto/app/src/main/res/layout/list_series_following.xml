<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/listEpisode"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="10dp">

    <androidx.cardview.widget.CardView
        android:layout_width="140dp"
        android:layout_height="190dp"
        android:layout_margin="2.5dp"
        android:layout_marginEnd="2dp"
        app:cardCornerRadius="10dp">

        <ImageView
            android:id="@+id/posterBasic"
            android:layout_width="match_parent"
            android:layout_height="190dp"
            android:contentDescription="@string/serie_poster"
            android:scaleType="centerCrop" />

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="15dp"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/serie_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:maxLines="2"
            android:text="Nombre de serie"
            android:textAllCaps="true"
            android:textColor="@color/colorPrimary"
            android:textSize="7.5pt"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12.5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/episode_fecha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:ellipsize="marquee"
                android:maxLines="2"
                android:text="En emisiÃ³n"
                android:textColor="@color/colorAccent"
                android:textSize="5.5pt"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ProgressBar
                android:id="@+id/progreso"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_width="170dp"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/vistos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:text="@string/num_vistos" />
        </LinearLayout>

        <Button
            style="@style/Widget.AppCompat.Button.Colored.Personal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="EPISODE INFO" />
    </LinearLayout>


</LinearLayout>